
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<h4 class="ml-5 bg-light d-inline">新規会員登録</h4>
<div class="container">
    <div class="row mb-2">
      <div class="col-md-2">
        <span>名前</span>
      </div>

    <div class="col-md-1">
    <%= f.label :first_name, "(姓)" %>
    </div>
    <div class="col-md-2">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="col-md-1">
    <%= f.label :last_name, "(名)" %>
    </div>
    <div class="col-md-2">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>
  </div>
  
  </div>
  
  <div class="row mb-2">
      <div class="col-md-2">
        <span>フリガナ</span>
      </div>
      
    <div class="col-md-1">
      <%= f.label :first_name_kana, "(セイ)" %>
     </div>
    <div class="col-md-2">
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="col-md-1">
      <%= f.label :last_name_kana, "(メイ)" %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-md-3">
      <%= f.label :email, "メールアドレス" %>
      </div>
    <div class="col-md-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-md-3">
    <%= f.label :postal_code, "郵便番号(ハイフン無し)" %>
    </div>
    <div class="col-md-2">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>
  
  <div class="row mb-2">
    <div class="col-md-3">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :address, autofocus: true, autocomplete: "name", :size=>"50" %>
    </div>
  </div>
  
  <div class="row mb-2">
    <div class="col-md-3">
      <%= f.label :telephone_number, "電話番号(ハイフン無し)" %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>
  
  <div class="row mb-2">
    <div class="col-md-3">
      <%= f.label :password, "パスワード(6文字以上)" %>
    </div>
    <div class="col-md-2">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
  
  <div class="row mb-2">
    <div class="col-md-3">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
    </div>
    <div class="col-md-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="btn">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>
  <div>
    <h4 class="ml-5 bg-light d-inline">既に登録済みの方</h4>
</div>
  <div class="container">
    <div class="row"></div>
    <p class="col-md-4 pt-4"><u><%= link_to 'こちら', new_customer_session_path %></u>からログインしてください。</p>
  </div>