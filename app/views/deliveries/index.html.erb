<h4 class="m-4 d-inline"style="color: black; background-color: silver;">配送先登録/一覧</h4>
  <%= render 'deliveries/error',resource:@delivery %>
  <%= form_with model:@delivery, local:true do |f| %>
  <div class="m-5">
        <div class="form-group col-xs-12">
                <%= f.label "郵便番号（ハイフンなし）", class: "col-sm-2 control-label" %>
                <%= f.text_field :postal_code %>
        </div>
        <div class="form-group col-xs-12">
                <%= f.label "住所", class: "col-sm-2 control-label" %>
                <%= f.text_field :address,class: "col-sm-4"  %>
        </div>
        <div class="form-group col-xs-12">
                <%= f.label "宛先", class: "col-sm-2 control-label" %>
                <%= f.text_field :address_name %> <%= f.submit '新規登録',class:"btn btn-success ml-5" %>
        </div>
  <% end %>
<table class="table table-hover table-bordered ">
    <thead>
        <div class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="1"></th>
        </div>
    </thead>
     <tbody>
        <% @deliveries.each do |delivery| %>
           <tr>
             <td><%= delivery.postal_code %></td>
               <td><%= delivery.address %></td>
             <td><%= delivery.address_name %></td>
          <div class>
           <td><%= link_to '編集する',edit_delivery_path(delivery),class:"btn btn-success ml-4" %>
               <%= link_to '削除する',delivery_path(delivery),method: :delete, data: {confirm: "本当に削除してもよろしいですか？"},class:"btn btn-danger ml-3" %>
           </td>
           </div>
          </tr>
        <% end %>
      </tbody>
</table>
</div>