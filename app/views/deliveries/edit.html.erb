<div class="container">
   <h4 class="mt-4 d-inline"style="color: black; background-color: silver;">配送先編集</h4>

                <%= render 'deliveries/error',resource:@delivery %>
                  <%= form_with model:@delivery, local:true do |f| %>

                        <div class="form-group col-xs-12">
                                <%= f.label "郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
                                <%= f.text_field :postal_code %>
                        </div>
                        <div class="form-group col-xs-12">
                                <%= f.label "住所", class: "col-sm-3 control-label" %>
                                <%= f.text_field :address,class: "col-sm-5" %>
                        </div>
                        <div class="form-group col-xs-12">
                                <%= f.label "宛先", class: "col-sm-3 control-label" %>
                                <%= f.text_field :address_name %> <%= f.submit '変更内容を保存',class:"btn btn-success ml-5" %>
                        </div>

                  <% end %>
     </div>
</div>