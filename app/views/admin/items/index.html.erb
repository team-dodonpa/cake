 <div class="col-md-12">
  <h2>商品一覧</h2>
 <table class="table">
   <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
   </thead>
   <tbody>
<% @items.each do |item| %>
 <tr>
  <td><%= item.id %></td>
  <td><%= link_to item.name, admin_item_path(item), class: "item_#{item.id}" %></td>
  <td><%= item.price %></td>
  <%# <td><%= item.genre.name %></td>
   <td><% if item.is_active == true %><p class="text-success">販売中</p>
   <p><% else %>　販売停止中</p>
      <% end %>
   </td>  
 </tr>
  
<% end %>
   </tbody>
 </table>
<%= link_to "新規登録", new_admin_item_path(@item) %>
</div>