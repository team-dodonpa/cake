<h1>商品新規登録</h1>
<%= form_with model: @item, local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image_id %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= form.collection_select(:ganre_id, @ganres,:id, :name) %>
  <h4>税抜き価格</h4>
   <%= f.text_field :price %>円
   <h4>販売ステータス</h4>
   <%= form.radio_button :is_active, "販売中" %>販売中 <%= form.radio_button :is_active, "販売停止中" %>販売停止中
  <%= f.submit '新規登録' %>
  
<% end %>