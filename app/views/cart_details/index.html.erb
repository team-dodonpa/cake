<% @cart_details.each do |cart_detail| %>
 

<li class="list-none">
    <%= cart_detail.item.name %>
    <%= cart_detail.item.price %>
    <%= form_with model:cart_detail,url:cart_detail_path(cart_detail),local:true do |f| %>
    <%= f.hidden_field :item_id, value: cart_detail.item.id %>
    <%= f.select :amount , options_for_select((1..10), {selected: cart_detail.amount.to_i})%>
    <h2>合計:<%= (cart_detail.item.price*cart_detail.amount) %>円</h2>  
    <%= f.submit "更新", class: "" %>
    <% end %>
    <%= link_to "削除", cart_detail_path(cart_detail), method: :delete,
                                       data: {confirm: "商品を削除しますか？" } %>
                  
</li>
<% end %>
<h2><%= "合計：#{@total}円" %></h2>   
<%= link_to '買い物を続ける',items_path,class:"btn btn-success ml-4" %>
<%= button_to "カートを空にする", destroy_all_cart_details_path, method: :delete %>                                      
<h4> <%=link_to'情報入力に進む',new_order_path(@order), class:"btn btn-success" %></h4>