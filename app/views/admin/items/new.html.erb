<h4 class="ml-5 bg-light d-inline">商品新規登録</h4>
<%= form_with model: @item,url:admin_items_path, local:true do |f| %>
<div class="container">
 <tr> <h4>商品画像</h4>
 <%= f.attachment_field :image %>
 </tr>
 <tr>
  <h4>商品名</h4>
  <%= f.text_field :name %>
 </tr>
 <tr>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
 </tr>
 <tr>
  <h4>ジャンル</h4>
　<%= f.collection_select :genre_id, Genre.all , :id, :name, {prompt: "ジャンルを選択してください"} %>
 </tr>
 <tr>
  <h4>税抜き価格</h4>
   <%= f.text_field :price %>円
   <h4>販売ステータス</h4>
   <%= f.radio_button :is_active, "販売中" %>販売中 <%= f.radio_button :is_active, "販売停止中" %>販売停止中 
  <%= f.submit '新規登録' %>
 </tr> 
<% end %>
</div>