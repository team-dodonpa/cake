<div class=container>
<div class="row">
	<div class="col-md-8 offset-md-2">
	<div>
		<p class="item-content1"><%= attachment_image_tag @item, :image, :fill, 300, 250, format: 'jpeg',fallback: "no_image.jpg", size:'500x420' %></p>
	</div>
	<div>
		<%= form_for(@cart_detail ,url:cart_details_path(item_id: @item.id), method: :post) do |form| %>
		<h4><%= @item.name %></h4>
		<p><%= @item.introduction %></p>
	<div>
	  <p class="item-content2", style="font-family: arial black">¥ <%= ((@item.price*1.1).floor) %> (税込)
	  <span></span><%= form.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %></p>
	 </div>
  <div>
		  <p><%= form.submit "カートに入れる", class:"btn btn-primary" %></p>
		</div>
		<%end%>
	</div>
	</div>
</div>
</div> 