<h4 class="ml-5 bg-light d-inline">新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <span>名前</span>

  <div class="field">
    <%= f.label :first_name, "(姓)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
  </div>

    <div class="field">
    <%= f.label :last_name, "(名)" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>
  </div>

  <span>フリガナ</span>
  <div class="field">
    <%= f.label :first_name_kana, "(セイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "(メイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>
  </div>


  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
  <%= f.label :postal_code, "郵便番号(ハイフン無し)" %>
  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <%= f.label :address, "住所" %>
  <%= f.text_field :address, autofocus: true, autocomplete: "name", :size=>"50" %>

  <%= f.label :telephone_number, "電話番号(ハイフン無し)" %>
  <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>



  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h4 class="ml-5 bg-light d-inline">既に登録済みの方</h4>
  <div class="container">
    <div class="row"></div>
    <p class="col-md-4 pt-4"><u><%= link_to 'こちら', new_customer_session_path %></u>からログインしてください。</p>
  </div>